            </properties>
        </profile>

    </profiles>

    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <excludes>
                    <exclude>trunk/*</exclude>
                    <exclude>beta/*</exclude>
                    <exclude>preproduction/*</exclude>
                    <exclude>production/*</exclude>
                </excludes>
            </resource>

            <resource>
                <directory>src/main/resources/${profiles.active}</directory>
            </resource>
        </resources>
