    <profiles>
        <profile>
            <id>trunk</id>
            <properties>
                <profiles.active>trunk</profiles.active>
            </properties>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
        </profile>

        <profile>
            <id>beta</id>
            <properties>
                <profiles.active>beta</profiles.active>
            </properties>
        </profile>

        <profile>
            <id>preproduct</id>
            <properties>
                <profiles.active>preproduction</profiles.active>
            </properties>
        </profile>

        <profile>
            <id>product</id>
            <properties>
